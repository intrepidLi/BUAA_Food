<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.buaa.food.ui.activity.StatusActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="管理界面" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="请选择需要管理的内容"
        android:textColor="@color/black40"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_14" />


    <View style="@style/HorizontalLineStyle"
        android:layout_marginBottom="@dimen/dp_10"/>

    <LinearLayout
        android:id="@+id/ll_manage_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/select_item_background"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="@dimen/dp_15"
            android:src="@drawable/dish_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="管理菜品"
            android:textColor="@color/black80"
            android:textSize="35sp"
            android:textStyle="bold"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_manage_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/select_item_background"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="@dimen/dp_15"
            android:src="@drawable/test_user_img" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="管理用户"
            android:textColor="@color/black80"
            android:textSize="35sp"
            android:textStyle="bold"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</LinearLayout>