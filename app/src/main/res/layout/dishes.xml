<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dish Image -->
    <ImageView
        android:id="@+id/ivDishImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dish_1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/material_emphasis_high_type">
    <!-- Dish Name -->
    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="Dish Name = 第一道航味"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    </LinearLayout>
    <!-- Ingredients -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="食材组成:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/material_emphasis_high_type">

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="一些食材组成详情介绍"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    </LinearLayout>

    <!-- Price -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="菜品价格: ￥9.99"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="销售窗口  :            新北学五食堂"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/material_emphasis_high_type">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="18dp"
        android:text="收藏该菜品"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/transparent"
        app:iconGravity="textStart"
        app:icon="@drawable/ic_star_button_selector"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="18dp"
            android:text="加入购物车"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="18dp"
            android:text="评论该菜品"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    <!-- Other details can be added here -->

    </LinearLayout>
</LinearLayout>
