<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.buaa.food.ui.fragment.UserFragment">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/perfect_blue"
        app:leftIcon="@null"
        app:title="@string/user_home_page" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/fl_person_data_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/perfect_blue">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_person_data_avatar"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="@dimen/dp_30"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_user_img" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sb_person_data_name"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="end|center_horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/dp_30"
            android:maxLines="1"
            android:scaleType="centerCrop"
            android:text="test name"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/sp_30"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:id="@+id/btn_user_center"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/dp_30"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/user_center_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/user_center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_center_name"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="start|center_horizontal"
                android:gravity="center"
                android:maxLines="1"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/user_center_page"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/sp_30"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/user_center_right_icon"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:src="@drawable/arrows_right_ic" />

        </LinearLayout>

    </com.hjq.widget.layout.SettingBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/user_collection"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:background="@drawable/white_selector">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/collect_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"
                app:srcCompat="@drawable/collection_icon"
                tools:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom|center_horizontal"
                android:maxLines="1"
                android:scaleType="centerCrop"
                android:text="@string/user_collection_page"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/sp_24"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_history"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:background="@drawable/white_selector">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/history_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"
                app:srcCompat="@drawable/history_icon"
                tools:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom|center_horizontal"
                android:maxLines="1"
                android:scaleType="centerCrop"
                android:text="@string/user_history_page"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/sp_24"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_setting"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_25"
            android:background="@drawable/white_selector">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/setting_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"
                app:srcCompat="@drawable/setting_icon"
                tools:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom|center_horizontal"
                android:maxLines="1"
                android:scaleType="centerCrop"
                android:text="@string/user_setting_page"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/sp_24"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>