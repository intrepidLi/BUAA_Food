<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Lunch Image -->
    <ImageView
        android:id="@+id/dinner_recommand_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/recommand_food"/>

    <!-- Lunch Name -->
    <TextView
        android:id="@+id/tvLunchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="午餐推荐"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="这是一份美味的午餐，包括丰富的食材和独特的调味。"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <!-- Ingredients -->
    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="食材：主料，副料，调味料"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"/>

    <!-- Price -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="价格：￥19.99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <!-- Button to Add to Cart -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/common_button_pressed_color"
        android:text="加入购物车"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

</LinearLayout>
